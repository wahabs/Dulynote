        <center><h4 class="modal-title" id="myModalLabel">Choose a sticker!</h4></center>
      </div>

      <div class="modal-body">
          <div class="btn-group" data-toggle="buttons">

            <button data-dismiss="modal" class="sticker-choose btn btn-primary"><input type="radio" value="star"><span><i class="fa fa-lg fa-star"></i></span></button>
            <button data-dismiss="modal" class="sticker-choose btn btn-primary"><input type="radio" value="music"><span><i class="fa fa-lg fa-music"></i></span></button>
