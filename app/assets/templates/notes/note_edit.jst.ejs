<div class="row">

  <div class="notebook-select col-xs-4 col-xs-offset-8">
    <label for="notebook">Set Notebook</label>
      <select class="form-control" id="notebook" name="notebook_id">
        <% notebooks.each(function(notebook) { %>
          <option
            value="<%= notebook.id %>"
            <%= (note.get("notebook_id") === notebook.id) ? "selected" : "" %>>
          <%= notebook.escape("title") %>
          </option>
        <% }) %>
      </select>
  </div>

    <div class="col-xs-12">
        <div class="box">

            <div class="box-icon" data-toggle="modal" data-target="#sticker-modal">
              <span class="fa fa-4x fa-<%= note.escape("sticker") %>"></span>
            </div>

            <div class="info">
              <label for="title"></label>
                <h1 class="text-center"><div name="title" id="title" class="editable"><%= note.get("title") %></div></h1>
                <label for="body"></label>
                  <div name="body" id="body" class="editable"><%= note.get("body") %></div>
            </div>

        </div>
    </div>
</div>


<!-- Sticker Modal -->
<div class="modal fade" id="sticker-modal" tabindex="-1" role="dialog" aria-labelledby="stickerModalLabel" aria-hidden="true">
